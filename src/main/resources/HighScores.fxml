<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Font?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.geometry.Insets?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="Tetris.Controller"
          prefHeight="850.0" prefWidth="550.0"
          vgap="10" hgap="10"
          alignment="TOP_CENTER"
          style="-fx-background-image: url('images/background.jpg'); -fx-background-position: bottom,center"
          gridLinesVisible="true">
    <Label text=" GRAN CANARIA TETRIS"
           textFill="darkslategray"
           wrapText="true"
           textAlignment="CENTER"
           GridPane.columnIndex="0"
           GridPane.rowIndex="0"
           GridPane.halignment="CENTER"
           GridPane.valignment="BOTTOM"
           minHeight="200" prefWidth="500">
        <padding>
            <Insets top="80"/>
        </padding>
        <font>
            <Font size="60" name="AR CHRISTY"/>
        </font>
    </Label>
    <Label minHeight="150" GridPane.columnIndex="0" GridPane.rowIndex="1"></Label>
    <Button fx:id="backButton"
            text=" Back"
            GridPane.columnIndex="0"
            GridPane.rowIndex="2"
            GridPane.halignment="CENTER"
            onAction="#onButtonClick">
        <font>
            <Font size="30" name="AR CHRISTY"/>
        </font>
        <graphic>
            <ImageView>
                <Image url="images/return.png"/>
            </ImageView>
        </graphic>
    </Button>
</GridPane>
